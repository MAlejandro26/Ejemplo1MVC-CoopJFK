@model CoopJFK.Models.APORTACION

@{
    ViewBag.Title = "Aportaciones (Nuevos Socios)";
}


<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title"></h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">Sistema de Gestión de Crédito</a></li>
            <li>Aportaciones</li>
            <li class="active">Generar Deducciones</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<style type="text/css">
    .options {
        padding: 20px;
        margin-top: 20px;
        background-color: rgba(191, 191, 191, 0.15);
        position: relative;
    }

    .caption {
        font-size: 18px;
        font-weight: 500;
    }

    .option {
        margin-top: 10px;
    }

    .checkboxes-mode {
        position: absolute;
        right: 20px;
        bottom: 20px;
    }

    .option > .dx-selectbox {
        width: 150px;
        display: inline-block;
        vertical-align: middle;
    }

    .option > span {
        margin-right: 10px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="white-box">
                @using (Html.BeginForm())
                {
                    <div class="form-horizontal">
                        <h4>GENERAR DEDUCCION DE APORTACIONES (Nuevos Socios)</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.Label("Año :", new { @class = "text-nowrap" })
                                @Html.TextBoxFor(model => model.ANIO, new { @class = "form-control", placeholder = "#Año" })
                                <span class="error">El año es requerido</span>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.TIPO_DEDUCCION, "Forma de Deducción")
                                @Html.DropDownList("TIPO_DEDUCCION", null, "--Seleccione--", htmlAttributes: new { @class = "form-control" })
                                <span class="error">Seleccione el tipo de deducción</span>
                            </div>
                            <div class="col-md-offset-10 col-md-2 justify-content-end">
                                <button type="button" id="btnGenerar" class="btn btn-info">Generar</button> | @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-warning" })
                            </div>
                        </div>
                        <span class="error">Debe seleccionar al menos un socio</span>
                        <div id="containeraportacionesall"></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var myGrid = null;

        $(document).ready(function () {
            CargarGrid();

            $('#btnGenerar').click(function () {
                //validation of order
                var isAllValid = true;


                if ($('#ANIO').val().trim() == '') {
                    isAllValid = false;
                    $('#ANIO').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#ANIO').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#TIPO_DEDUCCION').val() <= 0) {
                    isAllValid = false;
                    $('#TIPO_DEDUCCION').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#TIPO_DEDUCCION').siblings('span.error').css('visibility', 'hidden');
                }

                var selectedRowsData = myGrid.getSelectedRowsData();

                if (selectedRowsData.length == 0)
                {
                    isAllValid = false;
                    $('#containeraportacionesall').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#containeraportacionesall').siblings('span.error').css('visibility', 'hidden');
                }

                if (isAllValid)
                {
                     console.log(selectedRowsData);

                    var data = {
                        anio: $('#ANIO').val().trim(),
                        aportaciones: selectedRowsData,
                        tipoDeduccion: $('#TIPO_DEDUCCION').val()

                    }

                    $(this).val('Procesando...');

                    $.ajax({
                        url: '/Aportacion/GenerarAptNuevosSocios',
                        type: "POST",
                        data: JSON.stringify(data),
                        dataType: "JSON",
                        contentType: "application/json",
                        success: function (d) {
                            let warnings = d.warnings
                            //check is successfully save to database
                            if (d.status == true) {
                                //will send status from server side
                                Swal.fire({
                                    position: 'center',
                                    type: 'success',
                                    title: 'Aportaciones generadas para el año digitado',
                                    showConfirmButton: true

                                })
                                CargarGrid();
                                // window.location.href = '/Periodo/Index';

                            }
                            else {
                                Swal.fire({
                                    type: 'error',
                                    title: 'Error!',
                                    text: d.messageerror,
                                    footer: ''
                                })

                            }
                            $('#btnGenerar').val('Generar');

                            if (warnings.length > 0) {
                                Swal.fire({
                                    type: 'warning',
                                    title: 'Errores al generar',
                                    html: "<p>" + warnings.join("</p><p>") + "</p>"
                                })
                            }
                        },
                        error: function (e) {
                            console.log(e);
                            Swal.fire({
                                type: 'error',
                                title: 'Error!',
                                text: 'Intente Nuevamente.',
                                footer: ''
                            })
                            //alert('Error. Intente Nuevamente.');
                            $('#btnGenerar').val('Generar');
                        }
                    });
                }

            });

        });

        //var groupCellTemplate = function (groupCell, info) {
        //    $('<div>')
        //        .appendTo(groupCell)
        //        .dxCheckBox({
        //            text: info.text,
        //            onValueChanged: function (e) {
        //                var keys = [];
        //                for (var i = 0; i < info.data.items.length; i++)
        //                    keys.push(info.data.items[i].ProductID);
        //                if (e.value)
        //                    myGrid.selectRows(keys, true);
        //                else
        //                    myGrid.deselectRows(keys);
        //            }
        //        })
        //};

        function CargarGrid() {
            var apor = get('aportacion');

            function get(name) {
                if (name = (new RegExp('[?&]' + encodeURIComponent(name) + '=([^&]*)')).exec(location.search))
                    return decodeURIComponent(name[1]);
            };
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetSociosParaNuevasAportaciones")',
                dataType: "json",
                data: { aportacion: apor },
                success: function (fillData) {

                    console.log(fillData)
                    myGrid = $("#containeraportacionesall").dxDataGrid({
                        dataSource: {
                            store: {
                                type: 'array',
                                key: "ID",
                                data: fillData
                            }
                        },

                        columns: [{ dataField: 'SOCIO', caption: 'No. Socio' }, { dataField: 'NO_EMPLEADO', caption: 'No. de Empleado' }, { dataField: 'NOMBRES', caption: 'Nombres y apellidos' },
                        { dataField: 'PERIODO_INGRESO', caption: 'Periodo de Ingreso' }, { dataField: 'FECHA_INGRESO', caption: 'Fecha de Ingreso' }],
                        allowColumnResizing: true,
                        allowColumnReordering: true,
                        cellHintEnabled: true,
                        columnAutoWidth: true,
                        showWhenGrouped: true,
                        grouping: {
                            contextMenuEnabled: false,
                            expandMode: 'buttonClick'
                        },
                        groupPanel: {
                            visible: false // enables grouping using the group panel
                        },
                        searchPanel: {
                            visible: true,
                            width: 240,
                            placeholder: "Search...",
                            highlightSearchText: true,
                            searchVisibleColumnsOnly: true
                        },
                        headerFilter: {
                            visible: true
                        },
                        rowAlternationEnabled: true,
                        scrolling: {
                            showScrollbar: 'always',
                            scrollByThumb: true
                        },
                        selection: {
                            mode: 'multiple',
                            allowSelectAll: true,
                            showCheckBoxesMode: 'always'
                        },
                        sorting: {
                            mode: 'multiple'
                        },
                        width: '100%',
                        height: '350px',

                        onInitialized: function (e) {
                            e.component.selectAll();
                        }
                    }).dxDataGrid("instance");
                }, error: function (xhr, status, error) {
                    alert(status);
                }
            });

        }





    </script>

}

